# Fronius Solar Dashboard Configuration
# Copy this file to .env and modify the values as needed

# Fronius Inverter Configuration
FRONIUS_INVERTER_IP=192.168.1.3

# Database Configuration
FRONIUS_DATABASE=power_data.db

# Timezone Configuration (use IANA timezone names)
FRONIUS_TIMEZONE=Australia/Sydney

# Data Collection Configuration
FRONIUS_POLL_INTERVAL=10

# Web Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Energy Pricing Configuration ($ per kWh)
FRONIUS_IMPORT_RATE=0.297
FRONIUS_EXPORT_RATE=0.035